<div>This is the body!</div>


<form action="/" method="post">
    <div class="form-group">
        <div class="btn-group" data-toggle="buttons">
            <label class="btn btn-primary active" for="good">
                <input class="" type="radio" name="alignment" id="good" value="good">Good</input>
            </label>
            <label class="btn btn-danger" for="evil">
                <input class="" type="radio" name="alignment" id="evil" value="evil">Evil</input>
            </label>        
        </div>
    </div>
    
    <div class="form-group">
        <label for="food">Favorite Food</label>
        <input class="form-control" type="text" name="food" id="food">
    </div>
    
    <div class="form-group">
        <label for="color">Favorite Color</label>
        <select class="form-control" name="color" id="color">
            <option value="red">Red</option>
            <option value="blue">Blue</option>
            <option value="black">Black</option>
            <option value="green">Green</option>
        </select>
    </div>
    
    
    <div class="form-group">
        <label for="insanity">Insanity</label>
        <input class="form-control" type="range" name="insanity" id="insanity" max="9" value="0">
    </div>
    
    
    
    
    

    <button type="submit" class="btn btn-primary">Submit</button>
    
</form>